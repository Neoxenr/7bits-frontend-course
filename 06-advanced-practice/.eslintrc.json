{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "one-var": ["error", "never"],
    "import/extensions": ["error", "never", { "png": "always" }],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-underscore-dangle": 0,
    "comma-dangle": "off",
    "no-param-reassign": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
